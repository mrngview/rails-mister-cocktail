<p>You have selected <strong><%= @cocktail.name %></strong></p>

<% @cocktail.photos.each do |photo| %>
  <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
<% end %>

<br>

<% if @cocktail.doses  %>
<h3>Ingredients</h3>
<% doses = @cocktail.doses  %>
<ul>
  <% doses.each do |dose|  %>
  <li>
    Description: <%= dose.description  %> <br>
  </li>
  <li>
    Ingredient: <%= dose.ingredient.name  %>
  </li>
  <% end  %>
</ul>
<% end  %>

<%= link_to "Back", cocktails_path %>
<br>
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>



